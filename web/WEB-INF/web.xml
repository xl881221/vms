<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>fmss</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:/fmss/config/spring/spring-config.xml,
			classpath*:/fmss/config/spring/spring-dbset.xml,
			classpath*:/fmss/config/spring/spring-system.xml
		</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.xml</param-value>
	</context-param>
	
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60</param-value>
	</context-param>
	<filter>
	    <filter-name>encoding</filter-name>
	    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
	    <init-param>
	       <param-name>encoding</param-name>
	       <param-value>UTF-8</param-value>
	  </init-param>
	</filter>
	<filter>
		<filter-name>SSO</filter-name>
		<filter-class>
			  fmss.action.UsysSSOFilter
		</filter-class>
		<init-param>
			<param-name>accessLimit</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>DWRSSO</filter-name>
		<filter-class>
			  fmss.action.UsysSSOFilter
		</filter-class>
	</filter>
	<filter>
		<filter-name>AJAXSSO</filter-name>
		<filter-class>
			  fmss.action.UsysSSOFilter
		</filter-class>
	</filter>
	<!-- 新增struts  begin 2009-6-12 -->
	<filter>
		<filter-name>struts</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.FilterDispatcher
		</filter-class>
	</filter>
	<filter-mapping>
	    <filter-name>encoding</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SSO</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>DWRSSO</filter-name>
		<url-pattern>/dwr/call/plaincall/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AJAXSSO</filter-name>
		<url-pattern>*.ajax</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- end 2009-6-12 -->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<!-- DWR异步 -->
	<servlet>
		<servlet-name>dwr-invoker</servlet-name>
		<display-name>DWR Servletw</display-name>
		<servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>crossDomainSessionSecurity</param-name>
			<param-value>false</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>dwr-invoker</servlet-name>
		<url-pattern>/dwr/*</url-pattern>
	</servlet-mapping>
	<!-- DWR异步 -->
	<session-config>
	    <session-timeout>45</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>

